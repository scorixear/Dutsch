{
    "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "*": [
          "./node_modules/*"
        ]
      },
      "skipLibCheck": true
    },
    "include": [
      "./src/**/*"
    ],
    "typeAcquisition": {
      "include": [
        "jest"
      ]
    }
  }